// Custom styles.
body {
    background-image:url(/images/bg.jpeg);
    background-repeat: no-repeat;
    background-attachment:fixed;
    background-position:50% 50%;
    background-size: cover;
}
#footer a {
    color:#eee;
}
.header{
    opacity: 0.9;
}
.footer{
    opacity: 0.9;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.main-inner {
    background: #fff;
    opacity: 0.9;
    padding:10px;
    border-radius: 5px;
}
.content{
    padding:20px;
}
.site-author-image {
    border-radius: 100%;
    height: 142px;
    width: 142px;
    animation: cycle 2s 0.5s forwards;
    transition: border-radius 2s;
    max-width: 142px;
    margin-bottom: 20px; 
}
